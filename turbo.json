{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": ["CI", "NODE_ENV"],
    "globalDependencies": ["**/.env*"],
    "tasks": {
        "build": {
            "dependsOn": ["build:missive.js", "^build"],
            "outputs": ["build/**"]
        },
        "build:missive.js": {
            "dependsOn": [],
            "outputs": ["build/**"]
        },
        "lint:check": {
            "cache": false
        },
        "lint:fix": {
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "watch": {
            "persistent": true,
            "dependsOn": ["watch:missive.js", "^watch"],
            "cache": false
        },
        "watch:missive.js": {
            "dependsOn": [],
            "persistent": true,
            "outputs": ["build/**"],
            "cache": false
        },
        "test": {
            "dependsOn": [],
            "cache": false
        },
        "types:check": {
            "cache": false
        }
    }
}
