---
import type { Props } from '@astrojs/starlight/props';
import Default from '@astrojs/starlight/components/Footer.astro';
import { Icon } from '@astrojs/starlight/components';
import { Envelope } from '../envelope';
---

<Default {...Astro.props}>
    <slot />
</Default>
<div class="mx-auto max-w-screen-xl px-4 pb-8 pt-16 sm:px-6 lg:px-8">
    <div class="mt-16 border-t border-gray-700 pt-8">
        <p class="text-center text-xs/relaxed text-gray-500">
            <Envelope />
            Missive.js. MIT License.
            <br />
            <Icon name="starlight" color="yellow" /> Powered by <a
                href="https://starlight.astro.build"
                target="_blank"
                class="text-gray-500 hover:text-gray-500/75">Astro Starlight</a
            >.
            <br />
            <Icon name="seti:html" /> with <Icon name="heart" color="pink" /> by <br />
        </p>
        <div class="flex justify-center flex-col items-center">
            <div class="flex flex-row text-center text-xs/relaxed text-gray-500 items-center">
                <a class="text-gray-500 hover:text-gray-500/75" href="https://linkedin.com/in/sebastienmorel"
                    >Sébastien Morel <Icon name="linkedin" class="ml-3" /></a
                >
                <a class="text-gray-500 hover:text-gray-700/75 ml-3" href="https://github.com/plopix"
                    ><Icon name="github" /></a
                >
            </div>
            <div class="flex flex-row text-center text-xs/relaxed text-gray-500 items-center">
                <a class="text-gray-500 hover:text-gray-500/75" href="https://linkedin.com/in/sebastienmorel"
                    >Anaël Chardan <Icon name="linkedin" class="ml-3" /></a
                >
                <a class="text-gray-500 hover:text-gray-500/75 ml-3" href="https://github.com/anaelChardan"
                    ><Icon name="github" /></a
                >
            </div>
        </div>
    </div>
</div>
