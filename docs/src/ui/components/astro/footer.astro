---
import type { Props } from '@astrojs/starlight/props';
import Default from '@astrojs/starlight/components/Footer.astro';
import { Icon } from '@astrojs/starlight/components';
import { Envelope } from '../envelope';
---

<Default {...Astro.props}>
    <slot />
</Default>
<div class="mx-auto max-w-screen-xl px-4 pb-8 pt-16 sm:px-6 lg:px-8">
    <div class="mt-16 border-t border-gray-700 pt-8">
        <p class="text-center text-xs/relaxed text-gray-500">
            <Icon name="heart" color="pink" /><br />
            <Envelope />
            Missive.js. MIT License.
            <br />
            <Icon name="starlight" color="yellow" /> Powered by <a
                href="https://starlight.astro.build"
                target="_blank"
                class="text-gray-500 hover:text-gray-500/75">Astro Starlight</a
            >.
            <br />

            <Icon name="seti:php" color="#7986B8" /> Inspired by <a
                target="_blank"
                title="The Amazing Symfony Messenger"
                class="text-gray-500 hover:text-gray-500/75"
                href="https://symfony.com/doc/current/components/messenger.html">Symfony Messenger</a
            >
        </p>
    </div>
    <div class="flex justify-center flex-col items-center">
        <div class="flex flex-row text-center text-xs/relaxed text-gray-500 items-center">
            <a
                target="_blank"
                class="text-gray-500 hover:text-gray-500/75"
                href="https://linkedin.com/in/sebastienmorel">Sébastien Morel <Icon name="linkedin" class="ml-3" /></a
            >
            <a target="_blank" class="text-gray-500 hover:text-gray-700/75 ml-3" href="https://github.com/plopix"
                ><Icon name="github" /></a
            >
        </div>
        <div class="flex flex-row text-center text-xs/relaxed text-gray-500 items-center">
            <a
                target="_blank"
                class="text-gray-500 hover:text-gray-500/75"
                href="https://www.linkedin.com/in/anaelchardan/">Anaël Chardan <Icon name="linkedin" class="ml-3" /></a
            >
            <a target="_blank" class="text-gray-500 hover:text-gray-500/75 ml-3" href="https://github.com/anaelChardan"
                ><Icon name="github" /></a
            >
        </div>
    </div>
</div>
