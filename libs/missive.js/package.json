{
    "name": "missive.js",
    "description": "A Service Bus with Envelope and Stamps fully-typed for Typescript as well as Middlewares",
    "keywords": [
        "service bus",
        "bus",
        "envelope",
        "stamp",
        "middleware",
        "typescript",
        "zod",
        "missive",
        "cqrs"
    ],
    "author": "Sébastien Morel <plopix@gmail.com>",
    "license": "MIT",
    "contributors": [
        "Sébastien Morel <plopix@gmail.com>",
        "Anaël Chardan"
    ],
    "version": "0.3.0",
    "type": "module",
    "main": "./build/index.cjs",
    "module": "./build/index.js",
    "exports": {
        ".": {
            "types": "./build/index.d.ts",
            "import": "./build/index.js",
            "require": "./build/index.cjs"
        }
    },
    "types": "./build/index.d.ts",
    "peerDependencies": {
        "zod": "*"
    },
    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@types/node": "^22.8.6",
        "eslint-config-custom": "workspace:*",
        "tsconfig": "workspace:*",
        "tsup": "^8.3.5",
        "typescript": "^5.6.3",
        "vitest": "^2.1.4",
        "zod": "^3.23.8"
    },
    "engines": {
        "node": ">=20"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/missive-js/missive.js.git"
    },
    "scripts": {
        "types:check": "tsc --noEmit",
        "build": "cp ../../README.md ../../LICENSE . && tsup",
        "watch": "tsc -W --preserveWatchOutput",
        "lint:check": "eslint .",
        "lint:fix": "eslint . --fix",
        "test": "vitest run"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "package.json",
        "build",
        "README.md",
        "LICENSE"
    ],
    "dependencies": {
        "nanoid": "^5.0.8"
    }
}
